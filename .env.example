# Travel Buddy API Configuration
# Copy this file to .env and update the values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Groq Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-8b-8192
GROQ_MAX_TOKENS=1000
GROQ_TEMPERATURE=0.7

# MongoDB Configuration (Atlas Cloud)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=TravelBuddy
DATABASE_NAME=travel_buddy

# API Configuration
APP_NAME=Travel Buddy API
VERSION=1.0.0
DESCRIPTION=Generate personalized travel itineraries using AI

# Authentication Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-very-long-and-random
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Development Settings
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO
